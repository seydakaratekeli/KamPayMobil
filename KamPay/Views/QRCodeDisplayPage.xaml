<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             xmlns:vm="clr-namespace:KamPay.ViewModels"
             x:DataType="vm:QRCodeDisplayViewModel"
             x:Class="KamPay.Views.QRCodeDisplayPage"
             Title="Teslimat Kodu">
    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        <Label 
            Text="Teslimat için bu QR kodu satıcıya okutun."
            HorizontalTextAlignment="Center"
            FontSize="18"/>

        <zxing:BarcodeGeneratorView
            Value="{Binding QrCodeData}"
            Format="QrCode"
            WidthRequest="300"
            HeightRequest="300"
            HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>