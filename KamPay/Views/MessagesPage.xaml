<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:KamPay.ViewModels"
             xmlns:models="clr-namespace:KamPay.Models"
             xmlns:conv="clr-namespace:KamPay.Converters"
             x:Class="KamPay.Views.MessagesPage"
             Title="Mesajlar"
             Shell.BackgroundColor="#4CAF50">

    <Grid RowDefinitions="Auto,*">

        <Frame Grid.Row="0"
               Margin="15,10"
               Padding="15"
               CornerRadius="15"
               BackgroundColor="#E8F5E9"
               BorderColor="Transparent">
            <HorizontalStackLayout Spacing="10">
                <Label Text="ðŸ’¬"
                       FontSize="24"
                       VerticalOptions="Center" />
                <VerticalStackLayout>
                    <Label Text="MesajlarÄ±m"
                           FontSize="18"
                           FontAttributes="Bold" />
                    <Label Text="{Binding UnreadCount, StringFormat='{0} okunmamÄ±ÅŸ mesaj'}"
                           FontSize="12"
                           TextColor="#4CAF50"
                           IsVisible="{Binding UnreadCount, Converter={StaticResource IntToBoolConverter}}" />
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshConversationsCommand}">
            <CollectionView ItemsSource="{Binding Conversations}"
                            SelectionMode="None">

                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="40"
                                         VerticalOptions="Center"
                                         HorizontalOptions="Center">
                        <Label Text="ðŸ’¬"
                               FontSize="60"
                               HorizontalTextAlignment="Center" />
                        <Label Text="{Binding EmptyMessage}"
                               FontSize="16"
                               TextColor="#757575"
                               HorizontalTextAlignment="Center"
                               Margin="0,10,0,0" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Conversation">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Sil"
                                               BackgroundColor="#F44336"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MessagesViewModel}}, Path=DeleteConversationCommand}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="15,5"
                                   Padding="15"
                                   CornerRadius="15"
                                   BorderColor="#E0E0E0"
                                   BackgroundColor="White">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MessagesViewModel}}, Path=ConversationTappedCommand}"
                                                          CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>

                                <Grid ColumnDefinitions="60,*,Auto"
                                      ColumnSpacing="15">

                                    <Frame Grid.Column="0"
                                           Padding="0"
                                           WidthRequest="60"
                                           HeightRequest="60"
                                           CornerRadius="30"
                                           IsClippedToBounds="True"
                                           BackgroundColor="#4CAF50">
                                        <Label Text="{Binding OtherUserName, StringFormat='{0:0}'}"
                                               FontSize="24"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center" />
                                    </Frame>

                                    <VerticalStackLayout Grid.Column="1"
                                                         VerticalOptions="Center"
                                                         Spacing="5">
                                        <Label Text="{Binding OtherUserName}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="1" />

                                        <Label Text="{Binding LastMessage}"
                                               FontSize="14"
                                               TextColor="#757575"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="1" />

                                        <Frame IsVisible="{Binding ProductTitle, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"
                                               Padding="8,4"
                                               CornerRadius="8"
                                               BackgroundColor="#E3F2FD"
                                               BorderColor="Transparent">
                                            <Label Text="{Binding ProductTitle, StringFormat='ðŸ“¦ {0}'}"
                                                   FontSize="11"
                                                   TextColor="#1976D2"
                                                   LineBreakMode="TailTruncation"
                                                   MaxLines="1" />
                                        </Frame>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="2"
                                                         VerticalOptions="Center"
                                                         HorizontalOptions="End"
                                                         Spacing="5">
                                        <Label Text="{Binding LastMessageTimeText}"
                                               FontSize="11"
                                               TextColor="#757575"
                                               HorizontalTextAlignment="End" />

                                        <Frame IsVisible="{Binding UnreadCount, Converter={StaticResource IntToBoolConverter}}"
                                               Padding="8,4"
                                               CornerRadius="10"
                                               BackgroundColor="#4CAF50"
                                               BorderColor="Transparent"
                                               HorizontalOptions="End">
                                            <Label Text="{Binding UnreadCount}"
                                                   FontSize="11"
                                                   FontAttributes="Bold"
                                                   TextColor="White" />
                                        </Frame>
                                    </VerticalStackLayout>

                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <ActivityIndicator Grid.Row="1"
                           IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="#4CAF50"
                           WidthRequest="50"
                           HeightRequest="50"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>

    </Grid>

</ContentPage>